{
	"extends": "@marais/tsconfig",
	"compilerOptions": {
		"noEmit": true,
		"declaration": false,
		"removeComments": false,
		"baseUrl": ".",
		"paths": {
			"dldr": ["src/index.d.ts", "src/index.ts"],
			"dldr/*": ["src/*.d.ts", "src/*.ts"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
